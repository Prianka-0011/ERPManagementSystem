@model ERPManagementSystem.Models.Customer
@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}

<div class="container-fluid">
    <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
        <div class="row">
            <div class="col-md-10 offset-1 col-10 offset-md-1 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label>FirstName</label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>
            <div class="col-md-10 offset-1 col-10 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <label>LastName</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <div class="col-md-10 offset-1 col-10 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <label>Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
            </div>
            <div class="col-md-10 offset-1 col-10 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="col-md-10 offset-1 col-10 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <label>Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>

            <div class="col-md-10 offset-1 col-10 col-lg-10 offset-lg-1">
                <div class="form-group">
                    <label>Status</label>
                    <select asp-for="CustomerStatus" class="form-control">
                        <option value="Enable">Enable</option>
                        <option value="Disable">Disable</option>
                    </select>
                </div>
            </div>
            <div class="container d-flex justify-content-center align-items-center">
                <button type="submit" class="savebtn">Save</button>
            </div>
        </div>
    </form>
</div>

