@model IEnumerable<ERPManagementSystem.Models.EmployeeSalaryBill>
@using ERPManagementSystem.Extensions;
@{

    Pager pager = new Pager();
    int pageNo = 0;
    var i = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
        if (pager.CurrentPage == 1)
        {
            i = pager.StartPage;
        }
        if (pager.CurrentPage > 1)
        {
            i = pager.PageSize * (pager.CurrentPage - pager.StartPage);
            i++;
        }
    }

}

<div class="row">
    <div class="col-md-4">
        <p class="recordcount">@ViewBag.TotalRecord record exist</p>
    </div>

</div>
@if (Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col"><a asp-action="Index" asp-controller="EmployeeSalary" asp-route-sortOrder="@ViewBag.referen">Reference Name</a></th>
                <th scope="col">Date</th>
                <th scope="col">Payment Status</th>
                <th scope="col">Bill Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td scope="row">@i</td>
                <td>@item.ReferenceNo</td>
                <td>@item.Date</td>
                <td>@item.PaymentStatus</td>
                <td>@item.SalaryBillStatus</td>
                <td>
                    <a class="rowAction1" onclick="ShowInSalaryBillLargePopup('@Url.Action("AddOrEdit","EmployeeSalary",new { id=item.Id},Context.Request.Scheme)','Edit' )"><span>Create bills</span></a>
                </td>
                <td>
                    <a class="rowAction1" onclick="ShowInSalaryBillLargePopup('@Url.Action("DraftSalaryBills","EmployeeSalary",new { id=item.Id},Context.Request.Scheme)','Post Bill' )"><span>Post bills</span></a>
                </td>
            </tr>
                i++;
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12 col-12 col-lg-12">
            @if (pager.TotalPages > 0)
            {
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @if (pager.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="EmployeeSalary" asp-action="Index" asp-route-pg="1">Frist</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-controller="EmployeeSalary" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Prev</a>
                            </li>
                        }
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @( pge==pager.CurrentPage?"active":"")">
                                <a class="page-link" asp-controller="EmployeeSalary" asp-action="Index" asp-route-pg="@pge">@pge</a>
                            </li>
                        }
                        @if (pager.CurrentPage < pager.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="EmployeeSalary" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-controller="EmployeeSalary" asp-action="Index" asp-route-pg="@pager.TotalPages">Last</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}