@model ERPManagementSystem.ViewModels.ProductVm
@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}

<div class="container">
    <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostLargeModal(this);" enctype="multipart/form-data" autocomplete="off">
        <div class="row">
            <div class="col-md-8 col-lg-8 col-8">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" />
                            <label>Name</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Brand</label>
                            <select asp-for="BrandId" asp-items="@ViewBag.Brand" class="form-control"> </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Category</label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.Category" onclick="subcategoryList()" class="form-control category"> </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Sub Category</label>
                            <select asp-for="SubCategoryId" asp-items="@ViewBag.SubCategory" class="form-control subcategory"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Gallery</label>
                                <input type="file" multiple class="form-control" onchange="loadImg(event)" id="Galaries" asp-for="Galleries" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Status</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Enable">Enable</option>
                                <option value="Disable">Disable</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container d-flex justify-content-center align-items-center">
                    <button type="submit" class="savebtn">Save</button>
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-4">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-12 col-12 col-lg-12 ">
                            @if (Model.ImagePath != null)
                            {
                                <div class="displayonEditPri">
                                    <img src="~/@Model.ImagePath" alt="Alternate Text" />
                                </div>
                            }
                            <div class="primaryimg" id="mainimgDiv">


                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12 col-lg-12">
                            @*@if (Model.GalleryImagesPath != null)
                            {
                                <div class="displayonEdit">
                                    <div class="row">
                                        @foreach (var item in Model.GalleryImagesPath)
                                        {

                                            <div class="col-md-3">
                                                <img src="~/@item.ImagePath" style="height: 30PX; margin-bottom: 3px; width: 30PX; " alt="Alternate Text" />
                                            </div>

                                        }
                                    </div>
                                </div>
                            }*@
                            <div class="galleryimg">
                                <div class="row " id="galleryParent">

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}