@model ERPManagementSystem.Models.PurchaseOrder
@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;

}

<div class="container-fluid">
    <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostLargeModal(this);" enctype="multipart/form-data" autocomplete="off">
        <div class="row">
            <div class="col-md-4 col-lg-4 col-12">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Vendon</label>
                    <select asp-for="VendorId" asp-items="ViewBag.Vendor" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Purchase Order No</label>
                    <input asp-for="PurchaseNo" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            @*<div class="col-md-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Shipping Cost</label>
                    <input asp-for="ShippingCost" class="form-control shippingcost"  />
                </div>
            </div>*@
            <div class="col-md-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Currency</label>
                    <select asp-for="CurrencyId" asp-items="ViewBag.Currency" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Status</label>
                    <select asp-for="PurchaseOrderStatus" class="form-control">
                        <option value="value">text</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Delivery Date</label>
                    <input asp-for="DeliveryDate" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">

        </div>
        <div class="lineitem">
            <p>Add Line Item</p>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12 col-12">

                @if (Model.PurchaseOrderLineItems != null && Model.PurchaseOrderLineItems.Count() > 0)
                {
                    <div class="table-wrapper-scroll-y custom-scrollbar">
                        <table class="table datatable table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 3%" scope="col">Image</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Color</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Tax Rate</th>
                                    <th scope="col">Discount</th>
                                    <th scope="col">Order Quantity</th>
                                    <th scope="col"> Total Cost</th>
                                    <th scope="col">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int j = 0;
                                }
                                @foreach (var item in Model.PurchaseOrderLineItems)
                                {
                                    if (j == 0)
                                    {
                                        <tr class="define">

                                            <td>
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].Id" />
                                                <img src="https://localhost:44377/@item.ImgPath" alt="Alternate Text" id="productImg" />
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].ImgPath" id="imgPath" />
                                            </td>
                                            <td style="width: 13%">
                                                <div class="form-group">
                                                    <select asp-for="@Model.PurchaseOrderLineItems[j].ProductId" asp-items="ViewBag.Products" id="product" class="form-control"></select>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input asp-for="@Model.PurchaseOrderLineItems[j].Color" class="form-control" />
                                                </div>
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Size" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Price" id="price" class="form-control" />
                                            </td>
                                            <td style="width: 13%">
                                                <select asp-for="@Model.PurchaseOrderLineItems[j].TaxRateId" id="tax" asp-items="ViewBag.Tax" class="form-control"></select>
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].Rate" id="rate" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Discount" id="discount" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].OrderQuantity" id="quantity" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].TotalCost" readonly id="totalCost" class="form-control" />
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].PerProductCost" type="hidden" id="perProductCost" class="form-control" />
                                            </td>
                                            <td style="width: 20%">
                                                <textarea asp-for="@Model.PurchaseOrderLineItems[j].Description" class="form-control"></textarea>
                                            </td>
                                            <td style="width: 2%">
                                                <a id="removeFeildWithValue" class="remove refreshTR"><i class="fas fa-minus"></i></a>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="define">
                                            <td>
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].Id" />
                                                <img src="https://localhost:44377/@item.ImgPath" alt="Alternate Text" id="productImg" />
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].ImgPath" id="imgPath" />
                                            </td>
                                            <td style="width: 13%">
                                                <div class="form-group">
                                                    <select asp-for="@Model.PurchaseOrderLineItems[j].ProductId" asp-items="ViewBag.Products" id="product" class="form-control"></select>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input asp-for="@Model.PurchaseOrderLineItems[j].Color" class="form-control" />
                                                </div>
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Size" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Price" id="price" class="form-control" />
                                            </td>
                                            <td style="width: 13%">
                                                <select asp-for="@Model.PurchaseOrderLineItems[j].TaxRateId" id="tax" asp-items="ViewBag.Tax" class="form-control"></select>
                                                <input type="hidden" asp-for="@Model.PurchaseOrderLineItems[j].TaxRate" id="taxRate" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].Discount" id="discount" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].OrderQuantity" id="quantity" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].TotalCost" readonly id="totalCost" class="form-control" />
                                                <input asp-for="@Model.PurchaseOrderLineItems[j].PerProductCost" type="hidden" id="perProductCost" class="form-control" />
                                            </td>
                                            <td style="width: 20%">
                                                <textarea asp-for="@Model.PurchaseOrderLineItems[j].Description" class="form-control"></textarea>
                                            </td>
                                            <td style="width: 2%">
                                                <a id="removeFeildWithValue" class="remove removeTR"><i class="fas fa-minus"></i></a>
                                            </td>
                                        </tr>
                                    }

                                    j++;
                                }

                            </tbody>

                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-1 col-3 col-lg-1 mt-auto">
                            <a class="addBtn" id="addAnother"><i class="fas fa-plus"></i><span>Add</span></a>

                        </div>
                        <div class="col-md-1 col-3 col-lg-1 nopadding mt-auto">
                            <button type="submit" class="savebtn">Save</button>
                        </div>

                        <div class="col-md-2 col-lg-2 col-3  ml-auto mt-auto">

                            <label>Discount</label>
                            <input id="discountOntotalOrder" class="form-control" asp-for="Discont" />

                        </div>
                        <div class="col-md-2 col-lg-2 col-3 mt-auto">

                            <label>Shipping Cost</label>
                            <input asp-for="ShippingCost" class="form-control shippingcost" />

                        </div>
                        <div class="col-md-2 col-lg-2 col-3 mt-auto">

                            <label>Subtotal</label>
                            <input id="subtotalOfThisOrder" readonly class="form-control" asp-for="TotalAmount" />


                        </div>
                    </div>

                }
            </div>
        </div>
    </form>
</div>
