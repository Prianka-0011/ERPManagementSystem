@model IEnumerable<ERPManagementSystem.Models.SaleOrder>
@using ERPManagementSystem.Extensions;
@{
    ViewData["Title"] = "Sales Orders";

}

<div class="action">
    <div class="row">
        <div class="col-md-3 col-12 col-lg-3">
            <a class="create" onclick="ShowInSmallPopup('@Url.Action("AddOrEdit","SalesOrders",null,Context.Request.Scheme)','New ShippingCharge' )"><i class="fas fa-plus"></i><span>New</span></a>
            <p class="recordcount">@Model.Count() record exist</p>
        </div>
    </div>
</div>
<div class="body">
    <div class="row">
        <div class="col-md-12 col-12 col-lg-12">
            <div id="view-all">
                @await Html.PartialAsync("_ViewAllSalesOrders", Model)
            </div>
        </div>
    </div>
</div>
