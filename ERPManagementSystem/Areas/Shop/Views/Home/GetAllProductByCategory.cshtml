@model ERPManagementSystem.ViewModels.ShopVm
@{
    ViewData["Title"] = "Index";
}

<!-- slider start -->
<div class="slider-area text-center">
    <div class="slider-active">
        @if (Model.Banners != null)
        {
            foreach (var item in Model.Banners)
            {
                <div class="single-slider slider-opacity ptb-250" style="background-image: url(/@item.ImagePath)">
                    <div class="slider-text">
                        <h2>@item.Name </h2>
                        <h3>@item.Description</h3>
                        @*<a href="shop.html">Shop The Collection</a>*@
                    </div>
                </div>
            }
        }


    </div>
</div>
<!-- slider end -->
<!-- shop area start -->
<div class="shop-area ptb-90">
    <div class="container">
        <div class="section-title text-center">
            <h3>Featured Collections</h3>
            <p>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident.</p>
        </div>
        <div class="shop-style-all">
            <div class="row">
                <div class="grid">
                    @if (Model.StockProducts != null)
                    {
                        foreach (var item in Model.StockProducts)
                        {
                            <div class="col-md-3 col-sm-6 col-xs-12 grid-item cat1">
                                <div class="shop hover-style mb-30">
                                    <div class="shop-img">
                                        <div class="shop-single-img">
                                            <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id">
                                                <img src="~/@item.Product.ImagePath" alt="" />
                                            </a>
                                            <div class="product-cart-3">
                                                <div class="product-cart-center">
                                                    <a asp-action="Cart" asp-controller="Home"><i class="pe-7s-cart"></i></a>
                                                    <a onclick="ShowInQuickCard('@Url.Action("ProductDetailInPopUp","Home",new { id=item.Id},Context.Request.Scheme)','New Product' )"><i class="pe-7s-look"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="title-style-3 text-center">
                                            <h3><a href="#">@item.Product.Name</a></h3>
                                            <span class="new-price">@item.CurrencyName @item.SalePrice</span>
                                            @if (@item.PreviousPrice > 0)
                                            {
                                                <span class="old-price">@item.CurrencyName @item.PreviousPrice</span>

                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }

                </div>
            </div>
        </div>
        @*<div class="view-more text-center mt-30">
               //auto load img <a href="shop.html">view more</a>
            </div>*@
    </div>
</div>
<!-- shop area end -->
