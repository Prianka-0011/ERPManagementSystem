@model ERPManagementSystem.ViewModels.StockProductVm
@{
    ViewData["Title"] = "ProductDetail";
    int i;
    int j;
}
@using ERPManagementSystem.Extensions
@using ERPManagementSystem.ViewModels
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{

    List<StockProductVm> products = HttpContextAccessor.HttpContext.Session.Get<List<StockProductVm>>("products");


    StockProductVm product =null;
    if (products != null)
    {
        product = products.FirstOrDefault(c => c.Id == Model.Id);


    }
}
<!-- breadcrumb end -->
<!-- page section start -->
@if (Model != null)
{
    <div class="page-section section ptb-100">
        <div class="container">
            <div class="row mb-40">
                <!-- QuickView Product Images -->
                <div class="col-md-5 col-sm-6 col-xs-12 mb-40">
                    <!-- Tab panes -->
                    <div class="tab-content mb-10">
                        @if (ViewBag.gallery != null)

                        {
                            j = 1;
                            foreach (var item in ViewBag.gallery)
                            {
                                if (j == 1)
                                {
                                    <div class="pro-large-img tab-pane active" id="pro-large-img-@j">
                                        <img src="~/@item.Product.ImagePath" alt="" />
                                    </div>
                                }
                                else
                                {
                                    <div class="pro-large-img tab-pane" id="pro-large-img-@j">
                                        <img src="~/@item.Product.ImagePath" alt="" />
                                    </div>
                                }

                                j++;
                            }
                        }
                    </div>
                    <!-- QuickView Product Thumbnail Slider -->
                    <div class="pro-thumb-img-slider">
                        @if (ViewBag.gallery != null)

                        {
                            i = 1;
                            foreach (var item in ViewBag.gallery)
                            {
                                <div><a href="#pro-large-img-@i" data-toggle="tab"><img src="~/@item.ImagePath" alt="" /></a></div>
                                i++;
                            }
                        }

                    </div>
                </div>
                <!-- QuickView Product Details -->
                <div class="col-md-7 col-sm-6 col-xs-12 mb-40">
                    <div class="product-details section">
                        <!-- Title -->
                        <h1 class="title">@Model.ProductName</h1>
                        <!-- Price Ratting -->
                        <div class="price-ratting section">
                            <!-- Price -->
                            <span class="price float-left"><span class="new">€ @Model.SalePrice</span></span>
                            <!-- Ratting -->
                            <span class="ratting float-right">
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <span> (01 Customer Review)</span>
                            </span>
                        </div>
                        <!-- Short Description -->
                        <div class="short-desc section">
                            <h5 class="pd-sub-title">Quick Overview</h5>
                            <p>@Model.ShortDescription </p>
                        </div>
                        <!-- Product Size -->
                        <div class="product-size section">
                            <h5 class="pd-sub-title">Select Size</h5>
                            <button>s</button>
                            <button class="active">m</button>
                            <button>x</button>
                            <button>xl</button>
                        </div>
                        <!-- Product Color -->
                        <div class="color-list section">
                            <h5 class="pd-sub-title">Select Color</h5>
                            <button class="active" style="background-color: #51bd99;"><i class="fa fa-check"></i></button>
                            <button style="background-color: #ff7a5f;"><i class="fa fa-check"></i></button>
                            <button style="background-color: #baa6c2;"><i class="fa fa-check"></i></button>
                            <button style="background-color: #414141;"><i class="fa fa-check"></i></button>
                        </div>
                        @if (product == null)
                        {

                            <form class="m-5" asp-action="ProductDetail" method="post">
                                <!-- Quantity Cart -->
                                <input type="hidden" asp-for="Id" />
                                <div class="quantity-cart section">
                                    <input class="quatityDDD" type="hidden" asp-for="Quantity" />

                                    <div class="product-quantity2">

                                        <input asp-for="CartQuantity" value="1">

                                    </div>

                                    <button class="add-to-cart">add to cart</button>


                                </div>
                            </form>
                        }
                        else
                        {
                            <form class="m-5" asp-action="RemoveToCart" method="post">
                                <!-- Quantity Cart -->
                                <input type="hidden" asp-for="Id" />
                                <div class="quantity-cart section">
                                    <input class="quatityDDD" type="hidden" asp-for="Quantity" />

                                    <div class="product-quantity2">

                                        <input asp-for="CartQuantity" value="1">

                                    </div>

                                    <button class="add-to-cart">remove to cart</button>


                                </div>
                            </form>
                        }

                        <!-- Usefull Link -->
                        <ul class="usefull-link section">
                            <li><a href="#"><i class="pe-7s-mail"></i> Email to a Friend</a></li>
                            <li><a href="#"><i class="pe-7s-like"></i> Wishlist</a></li>
                            <li><a href="#"><i class="pe-7s-print"></i> print</a></li>
                        </ul>
                        <!-- Share -->
                        <div class="share-icons section">
                            <span>share :</span>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Nav tabs -->
                <div class="col-xs-12">
                    <ul class="pro-info-tab-list section">
                        <li class="active"><a href="#more-info" data-toggle="tab">More info</a></li>
                        <li><a href="#data-sheet" data-toggle="tab">Data sheet</a></li>
                        <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
                    </ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content col-xs-12">
                    <div class="pro-info-tab tab-pane active" id="more-info">
                        <p>@Model.Description</p>
                    </div>
                    <div class="pro-info-tab tab-pane" id="data-sheet">
                        <table class="table-data-sheet">
                            <tbody>
                                <tr class="odd">
                                    <td>Compositions</td>
                                    <td>Cotton</td>
                                </tr>
                                <tr class="even">
                                    <td>Styles</td>
                                    <td>Casual</td>
                                </tr>
                                <tr class="odd">
                                    <td>Properties</td>
                                    <td>Short Sleeve</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="pro-info-tab tab-pane" id="reviews">
                        <a href="#">Be the first to write your review!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<!-- page section end -->
